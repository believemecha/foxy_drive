<h2 class="text-center mb-4">Change your password</h2>

<div class="row justify-content-center">
  <div class="col-md-6 col-lg-4">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "card p-4 shadow-sm" }) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, "New password", class: "form-label" %>
        <% if @minimum_password_length %>
          <small class="form-text text-muted mb-2">
            (<%= @minimum_password_length %> characters minimum)
          </small>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm new password", class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="d-grid">
        <%= f.submit "Change my password", class: "btn btn-success btn-block" %>
      </div>

    <% end %>

    <div class="mt-3 text-center">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
