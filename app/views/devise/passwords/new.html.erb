<h2 class="text-center mb-4">Forgot your password?</h2>

<div class="row justify-content-center">
  <div class="col-md-6 col-lg-4">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "card p-4 shadow-sm" }) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="d-grid">
        <%= f.submit "Send reset instructions", class: "btn btn-primary btn-block" %>
      </div>

    <% end %>

    <div class="mt-3 text-center">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
